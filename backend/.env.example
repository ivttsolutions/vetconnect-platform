# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=4000
API_VERSION=v1

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://vetconnect:vetconnect_password_change_in_production@postgres:5432/vetconnect?schema=public"

# ============================================
# REDIS
# ============================================
REDIS_URL="redis://:vetconnect_redis_password_change_in_production@redis:6379"
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=vetconnect_redis_password_change_in_production

# ============================================
# JWT
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SESSION
# ============================================
SESSION_SECRET=your-session-secret-change-in-production

# ============================================
# MINIO (S3-compatible storage)
# ============================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_change_in_production
MINIO_BUCKET_AVATARS=avatars
MINIO_BUCKET_POSTS=posts
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_PRODUCTS=products
MINIO_BUCKET_EVENTS=events
MINIO_BUCKET_ANIMALS=animals

# Public URL for accessing files (used in frontend)
MINIO_PUBLIC_URL=http://localhost:9000

# ============================================
# SENDGRID (Email Service)
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@vetconnect.com
SENDGRID_FROM_NAME=VetConnect

# Email Templates
SENDGRID_TEMPLATE_WELCOME=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_EMAIL_VERIFICATION=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_PASSWORD_RESET=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_JOB_APPLICATION=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_EVENT_REGISTRATION=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# STRIPE (Payment Processing)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs for subscription plans
STRIPE_PRICE_BASIC_MONTHLY=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_BASIC_YEARLY=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_MONTHLY=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_YEARLY=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxxxxxxxxxxxxxxxxxx

# ============================================
# BUNNY CDN
# ============================================
BUNNY_CDN_API_KEY=your-bunny-cdn-api-key
BUNNY_CDN_STORAGE_ZONE=vetconnect
BUNNY_CDN_HOSTNAME=vetconnect.b-cdn.net
BUNNY_CDN_STORAGE_ZONE_REGION=de

# ============================================
# FRONTEND URL
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# CORS ORIGINS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth endpoints specific rate limits
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# ============================================
# FILE UPLOAD LIMITS
# ============================================
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================
# 2FA SETTINGS
# ============================================
TWO_FACTOR_APP_NAME=VetConnect
TWO_FACTOR_WINDOW=2

# ============================================
# SEARCH & PAGINATION
# ============================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================
# SOCKET.IO
# ============================================
SOCKET_IO_CORS_ORIGINS=http://localhost:3000

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# ============================================
# CACHE
# ============================================
CACHE_TTL=3600
CACHE_ENABLED=true

# ============================================
# BACKGROUND JOBS
# ============================================
JOBS_ENABLED=true
JOBS_CONCURRENCY=5

# ============================================
# NOTIFICATIONS
# ============================================
NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=true

# ============================================
# ANALYTICS
# ============================================
ANALYTICS_ENABLED=true

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_GROUPS_ENABLED=true
FEATURE_EVENTS_ENABLED=true
FEATURE_PRODUCTS_ENABLED=true
FEATURE_JOBS_ENABLED=true
FEATURE_SHELTERS_ENABLED=true
FEATURE_DONATIONS_ENABLED=true
FEATURE_VOLUNTEERS_ENABLED=true

# ============================================
# ADMIN
# ============================================
ADMIN_EMAIL=admin@vetconnect.com
ADMIN_PASSWORD=Admin123!ChangeInProduction

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
